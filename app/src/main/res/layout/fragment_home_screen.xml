<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#00aeff">

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="270dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#00aeff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="Fill in your budget"
                    android:textColor="#00aeff"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <SearchView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchPriceField"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:tooltipText="Budget"
                    android:maxLength="50"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#00aeff"
                        android:onClick="searchDayMenu"
                        android:text="Day Menu"
                        android:textColor="@android:color/white"
                        android:layout_marginHorizontal="5dp"/>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#00aeff"
                        android:onClick="searchWeekMenu"
                        android:text="Week Menu"
                        android:textColor="@android:color/white"
                        android:layout_marginHorizontal="5dp"/>
                </LinearLayout>
                <Button
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#00aeff"
                    android:onClick="searchMenuPrice"
                    android:text="All Menus"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:background="#00aeff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="Allergies"
                android:textColor="#00aeff"
                android:textSize="21sp"
                android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60dp">
                <CheckBox android:id="@+id/checkbox_gluten"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Gluten"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox
                    android:id="@+id/checkbox_shellfish"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:paddingRight="20dp"
                    android:text="Shellfish" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <CheckBox android:id="@+id/checkbox_fish"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Fish"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_peanut"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:text="Peanut"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="60dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <CheckBox android:id="@+id/checkbox_milk"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Milk"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_nuts"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:text="Nuts"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="60dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <CheckBox android:id="@+id/checkbox_mustard"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Mustard"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_lupine"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:text="Lupine"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="60dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <CheckBox android:id="@+id/checkbox_eggs"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Eggs"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_soy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheese"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="60dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <CheckBox android:id="@+id/checkbox_celery"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Celery"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_molluscs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Molluscs"
                    android:paddingRight="20dp"
                    android:onClick="onCheckboxClicked"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>